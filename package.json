{
  "name": "Rusty",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/CXuesong/Rusty",
  "author": "CXuesong",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "build": "esbuild ./src/index.ts --bundle --outfile=./dist/rusty.js --platform=node --target=es2017 --tsconfig=./src/tsconfig.esbuild.json",
    "build:prod": "esbuild ./src/index.ts --bundle --outfile=./dist/rusty.js --minify --platform=node --target=es2017 --tsconfig=./src/tsconfig.esbuild.json",
    "typecheck": "tsc -p ./src/ --noEmit",
    "push": "pwsh ./scripts/Publish-Screeps.ps1 ./dist/rusty.js rusty-test-1",
    "push:2": "pwsh ./scripts/Publish-Screeps.ps1 ./dist/rusty.js rusty-test-2",
    "push:3": "pwsh ./scripts/Publish-Screeps.ps1 ./dist/rusty.js rusty-test-3",
    "push:prod": "pwsh ./scripts/Publish-Screeps.ps1 ./dist/rusty.js rusty-prod"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.1",
    "@types/screeps": "^3.2.3",
    "esbuild": "^0.12.15",
    "typescript": "^4.4.0-beta"
  },
  "dependencies": {
    "dayjs": "^1.10.6",
    "lodash": "^4.17.21",
    "tasklike-promise-library": "^0.0.13",
    "tslib": "^2.3.0"
  }
}
